@charset "utf-8";
@import url('https://fonts.googleapis.com/css?family=Noto+Serif+JP:300,400,500,700&display=swap');
html, body, div, span, object, iframe,
h1, h2, h3, h4, h5, h6, p, blockquote, pre,
abbr, address, cite, code,
del, dfn, em, img, ins, kbd, q, samp,
small, strong, sub, sup, var,
b, i,a,
dl, dt, dd, ol, ul, li,
fieldset, form, label, legend,button,
table, caption, tbody, tfoot, thead, tr, th, td,
article, aside, canvas, details, figcaption, figure,
footer, header, hgroup, menu, nav, section, summary,
time, mark, audio, video {
    margin:0 auto;
    padding:0;
    border:0;
    outline:0;
    font-size:100%;
    vertical-align:baseline;
    background:transparent;
}
body {font-family: 'Nanum Barun Gothic', sans-serif; color:#555; font-size:14px; }
article,aside,details,figcaption,figure,
footer,header,hgroup,menu,nav,section {
    display:block;
}
ul,ol {list-style:none;}

input, select, button,textarea{
    border:0; outline:0;border-radius:0; 
	-webkit-appearance:none; appearance:none; 
	vertical-align:middle;
	font-size:inherit; font-family:inherit;
	color:inherit;}
img{border:0; outline:0;vertical-align:middle;}
img,video,iframe{max-width:100%;}
a{display:inline-block; width:100%; height:100%;vertical-align:baseline;text-decoration:none; color:inherit;}
.clear::after{content:''; display:block; clear:both;}
.in{width:1366px; position:relative; margin:0 auto;}

.wrap{margin:0 auto; width:1366px; height:1680px; position:relative;}
.box_01{height:825px;}
.title h1{font-size:80px; font-family: 'Noto Serif JP', serif; position:absolute; left:80px; top:90px;}
.title p{font-size:30px; position:absolute; left:80px; top:180px;}
.box_01 .pic{position:absolute; left:305px; top:230px;}
.box_01 .concept{width:325px; height:168px; line-height:150%; position:absolute; left:80px; top:545px;}
.concept h3{font-size:30px; font-family: 'Noto Serif JP', serif; font-weight:300;}
.concept p{padding-top:30px; padding-left:43px; box-sizing:border-box;}

.box_02{background:url(../images/bg.jpg) no-repeat; background-size:cover; height:850px; position:relative;}
.color h3{font-family: 'Noto Serif JP', serif; font-size:36px; color:#fff; position:absolute; left:82px; top:87px;}
.circle{width:365px; height:365px; border-radius:50%; background:#fff; position:absolute; left:80px; top:180px;}
.paint{padding:80px 0 87px 70px; box-sizing:border-box;}
.paint li{margin-bottom:30px;}
.paint li>span{font-size:30px; padding-left:45px; box-sizing:border-box;}
.paint li .pink{color:#d27e85;}
.paint li .green{color:#55a481;}
.paint li .orange{color:#d77f55;}


.circle_02{width:620px; height:620px; border-radius:50%; background:#fff; position:absolute; left:80px; top:166px;}
.typho h3{font-family: 'Noto Serif JP', serif; font-size:36px; color:#fff; position:absolute; right:80px; top:80px;}
.circle_02 .alpha_01{width:325px;}

.box_03{background:#3d5b45; height:1005px;}

.h3{height:165px;}


.footer{width:100%; height:300px; background:#333;}



















